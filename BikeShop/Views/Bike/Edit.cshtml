@using BikeShop.Config
@model BikeShop.Models.Bike
@{
    ViewBag.Title = "Edit";
}

<h2>Editeaza bicicleta @Model.Name</h2>


@using (Html.BeginForm(actionName: Utilities.ACTION_UPDATE, controllerName: Utilities.BIKE_CONTROLLER, method: FormMethod.Post))
{
    @Html.ValidationSummary(true, "Au existat erori la validare", new { @class = "text-danger" })
    <br />


    @Html.LabelFor(b => b.Name)
    <br />
    @Html.TextBoxFor(b => b.Name, new { value = Model.Name, @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
    <br />


    @Html.LabelFor(b => b.Description)
    <br />
    @Html.TextBoxFor(b => b.Description, new { value = Model.Description, @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Description, "", new { @class = "text-danger" })
    <br />

    @Html.LabelFor(b => b.BikerTypeId)
    <br />
    @Html.DropDownListFor(b => b.BikerTypeId, new SelectList(Model.BikerTypeList, "Value", "Text"), "Alege o categorie de biciclist", new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.BikerTypeId, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.LabelFor(b => b.BikeCategory)
    <br />
    @Html.DropDownListFor(b => b.BikeCategoryId, new SelectList(Model.BikeCategoryList, "Value", "Text"), "Alege o categorie de bicicleta", new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.BikeCategoryId, "", new { @class = "text-danger" })
    <br />
    <br />


    @Html.LabelFor(b => b.FabricationDate)
    <br />
    <input name="FabricationDate" type="date" value="@Model.FabricationDate.ToString("yyyy-MM-dd")" class="form-control" />
    @Html.ValidationMessageFor(b => b.FabricationDate, "", new { @class = "text-danger" })
    <br />


    @Html.LabelFor(b => b.Quantity)
    <br />
    @Html.TextBoxFor(m => m.Quantity, new { type = "number", min = "0", step = "1", value = Model.Quantity, @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Quantity, "", new { @class = "text-danger" })
    <br />

    @Html.LabelFor(b => b.Price)
    <br />
    @Html.TextBoxFor(m => m.Price, new { type = "number", min = "0", step = "0.01", value = Model.Price, @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Price, "", new { @class = "text-danger" })
    <br />


    <br />
    @Html.LabelFor(b => b.Pieces, "Alege piese continute")
    <br />
    <br />

    <div style="width:50%">
        <table id="pieces" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Selecteaza</th>
                    <th>Nume</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.PiecesListCheckBoxes != null)
                {
                    for (int i = 0; i < Model.PiecesListCheckBoxes.Count(); i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(b => b.PiecesListCheckBoxes[i].Id)
                                @Html.HiddenFor(b => b.PiecesListCheckBoxes[i].Name)
                                @Html.HiddenFor(b => b.PiecesListCheckBoxes[i].DisplayName)
                                @Html.CheckBoxFor(b => b.PiecesListCheckBoxes[i].Checked)
                            </td>
                            <td>@Html.DisplayFor(b => b.PiecesListCheckBoxes[i].DisplayName) </td>
                        </tr>
                    }

                }

            </tbody>

        </table>
    </div>


    <br />
    @Html.LabelFor(b => b.Pieces, "Alege accesorii continute")
    <br />
    <br />

    <div style="width:50%">
        <table id="accesories" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Selecteaza</th>
                    <th>Nume</th>
                </tr>
            </thead>
            <tbody>
            </tbody>

        </table>
    </div>


    @Html.HiddenFor(b => b.BikeId, new { value = Model.BikeId })

    <button type="submit">Salveaza modificarile</button>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            console.log(@Model.FabricationDate.ToString("MM/dd/yyyy"));
            $("#pieces").DataTable();
            $("#accesories").DataTable();
        });
    </script>
}