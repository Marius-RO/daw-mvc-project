@model List<BikeShop.Models.Bike>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table id="bikes" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Descriere</th>
            <th>Sterge</th>

        </tr>

    </thead>
    <tbody>
        @foreach (BikeShop.Models.Bike p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@Html.ActionLink("Descriere", "Details", new { id = p.BikeId })</td>
                <td> <button class="btn-delete" data-id="@p.BikeId">Sterge</button></td>
            </tr>
        }

    </tbody>

</table>

@Html.ActionLink("Adauga bicicleta", "New")

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#bikes").DataTable();

            $("#bikes").on("click", ".btn-delete", function () {

                var btnDelete = $(this);
                var bikeId = btnDelete.attr("data-id");

                if (confirm("Esti sigur?")) {
                    $.ajax(
                        {
                            url: "/Bike/Delete/" + bikeId,
                            method: "POST",
                            success: function () {
                                console.log("[SUCCESS-delete] bikeId = " + bikeId);
                                table.row(btnDelete.parents("tr")).remove().draw();
                            },
                            error: function () {
                                console.error("[ERROR-delete] bikeId = " + bikeId);
                                table.row(btnDelete.parents("tr")).remove().draw();
                            }
                        }
                    );
                }
            });
        });
    </script>
}


