@model List<BikeShop.Models.Bike>
@{
    ViewBag.Title = "Index";
}

<h2>Biciclete</h2>

@Html.ActionLink("Adauga bicicleta", "New", "Bike", new { @class = "btn btn-primary" })
<br />
<br />

<table id="bikes" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Descriere</th>
            <th>Actiuni</th>

        </tr>

    </thead>
    <tbody>
        @foreach (BikeShop.Models.Bike p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>
                    @p.Description
                    <br />
                    <br />
                    @Html.ActionLink("Mai multe detalii", "Details", new { id = p.BikeId })
                </td>
                <td>
                    @Html.ActionLink(linkText: "Modifica informatii", actionName: "Edit", controllerName: "Bike", 
                        routeValues: new { id = p.BikeId }, htmlAttributes: new { @class = "btn btn-primary" })
                    <br /><br />
                    <button class="btn-delete btn btn-danger" data-id="@p.BikeId">Sterge</button>
                    <br />
                </td>
            </tr>
        }

    </tbody>

</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#bikes").DataTable();

            $("#bikes").on("click", ".btn-delete", function () {

                var btnDelete = $(this);
                var bikeId = btnDelete.attr("data-id");

                if (confirm("Esti sigur?")) {
                    $.ajax(
                        {
                            url: "/Bike/Delete/" + bikeId,
                            method: "POST",
                            success: function () {
                                console.log("[SUCCESS-delete] bikeId = " + bikeId);
                                table.row(btnDelete.parents("tr")).remove().draw();
                            },
                            error: function () {
                                console.error("[ERROR-delete] bikeId = " + bikeId);
                                table.row(btnDelete.parents("tr")).remove().draw();
                            }
                        }
                    );
                }
            });

        });
    </script>
}


